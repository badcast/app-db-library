<UserControl x:Class="ElectronicLib.Controls.ScopeLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicLib.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300" BorderThickness="5" BorderBrush="White">
    <Grid Background="White" Margin="5">
        <Label x:Name="label" Content="Hello world" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" FontSize="20" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <RotateTransform></RotateTransform>
            </Label.RenderTransform>
        </Label>
    </Grid>
</UserControl>
